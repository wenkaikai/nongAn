/* pages/components/hotSearch/hotSearch.wxss */
.title{
  display:flex;
  justify-content: center;
  align-items:center;
  color:#ADADAD;
  font-weight:normal;
  padding:30rpx 0;
  font-size:28rpx;
}
.title .line{
  width:50rpx;
  height:1px;
  background:#ADADAD;
  margin:0 10rpx;
}
.hotSearch{
  display:flex;
  flex-wrap:wrap;
  justify-content: center;
  align-items: center;
  padding:0 50rpx;
}
.hotSearch view{
  border-radius:40rpx;
  padding:10rpx 20rpx;
  background:#fff;
  font-size:28rpx;
  color:#ADADAD;
  border:1px solid #e5e5e5;
  margin:10rpx 10rpx;
}