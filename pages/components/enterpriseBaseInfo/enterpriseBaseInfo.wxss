/* pages/components/enterpriseBaseInfo/enterpriseBaseInfo.wxss */
@import "/app.wxss";
page{
  background:#F2F2F2;
  font-size:26rpx;
}
.name{
  color:#424242;
  font-size:40rpx;
  font-weight:600;
}
.mainInfo{
  display:flex;
  padding:20rpx 0;
  justify-content: flex-start;
  border-top:1px solid #DADADA;
  border-bottom:1px solid #DADADA;
}
.mainInfo > view{
  flex-basis: 25%;
  border-right:1px solid #DADADA;
  padding:0 12rpx;
  box-sizing: border-box;
} 
.mainInfo > view >view:last-child{
    font-size:24rpx;
}
.module-wrap{
  padding:0 30rpx;
}
.invoiceWrap{
    display:flex;
}
.invoiceBtn{
  color:#fff;
  border-radius:50rpx;
  background:#46C456;
  padding:10rpx 20rpx;
  white-space: nowrap;
  text-align:center;
  margin:auto;
}
.phone{
  display:flex;
  justify-content:space-between;
}
.phone>view{
  flex-grow:1;
  padding:20rpx 0;
}
.phone>view:first-child,.phone>view:last-child{
  flex-shrink:0;
  flex-grow:0;
}
.phone>view:last-child{
    flex-basis: 20%;
    text-align: right;
    display:flex;
    justify-content: flex-end;
}
/* .phone>view:last-child view{

} */
.slidDown{
    transform:rotate(-90deg);
    transition:transform .3s;
}
.slidUp{
    transform:rotate(90deg);
    transition:transform .3s;
}

.invoiceWrapShade{
    position:fixed;
    width:100%;
    height:100%;
    display:flex;
    top:0;
    left:0;
}
.invoiceWrapShade .shade{
    position:absolute;
    width:100%;
    height:100%;
    background:#333;
    opacity: 0.5;
}
.invoiceWrapShade  .invoice{
    margin:auto;
    background:#fff;
    display:flex;
    flex-direction: column;
    align-items:center;
    z-index:100;
    width:80%;
    padding:0 30rpx;
    text-align:center;
    border-radius:8rpx;
}
.invoice .title{
    border-bottom: 1px solid #DADADA;
    padding:30rpx 0;
    width:100%;
    font-size:32rpx;
    color:#333;
}
.invoice>view{
    /* display:flex;  */
}
.content{
    width:100%;
}
.content text{
    display:inline-block;
    vertical-align: middle;
    font-size:24rpx;
}
.content>view{
    border-bottom: 1px solid #DADADA;
    padding:30rpx 0;
    width:100%;
    display:flex;
    /* justify-content: space-between; */
}
.content>view text:first-child{
    color:#9B9B9B;
    margin-right:20rpx;
    white-space:nowrap;
}
.invoice .close{
    padding:30rpx 0;
    color:#46C456;
    width:100%;
}
